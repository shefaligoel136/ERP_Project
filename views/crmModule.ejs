<html>
    <head>
        <title>
            
            <%= title %> 

        </title>
    </head>
    <body>
        <h1>
            CRM  Page
        </h1>
        <section id="create-customers">

            <h4>Customer Personal Details</h4>

            <!-- Created customer personal detail form -->
            <form action="/customer/createCustomer" id="new-customer-pd" method="POST">

                <input type="text" name="first_name" id="" placeholder="First Name " required ><br>
                <input type="text" name="last_Name" id="" placeholder="Last Name" required ><br>
                <input type="text" name="phone" id="" placeholder="Phone Number" required ><br>
                <input type="text" name="altPhone" id="" placeholder="Alt. Phone Number"  ><br>
                <input type="text" name="addressLine1" id="" placeholder="Address Line 1" required ><br>
                <input type="text" name="addressLine2" id="" placeholder="Address Line 2"  ><br>
                <input type="number" name="pincode" id="" placeholder="Pincode" required ><br>
                <input type="text" name="city" id="" placeholder="City" required ><br>
                <input type="text" name="state" id="" placeholder="State" required ><br>
                <input type="text" name="country" id="" placeholder="Country" required ><br>
                <input type="email" name="email" id="" placeholder="Email" required ><br>
                <input type="date" name="dateOfBirth" id="" placeholder="Date of birth" required ><br>

                <input type="submit" value="Add Customer PD">

            </form>
        </section>

        <section id="show-customer">
            <h4>All Customers</h4>
            <div id="customer-list-container">
                <ul>
                    <% for(customer of customers){ %>
                        <li>
                            <%= customer %>
                        </li><br>
                   <% } %>
                </ul>
            </div>
        </section>
    </body>
</html>
